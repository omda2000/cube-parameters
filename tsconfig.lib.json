{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/store/**/*",
    "src/types/**/*",
    "src/containers/**/*"
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}